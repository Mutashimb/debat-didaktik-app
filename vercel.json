{
  "version": 2,
  "builds": [
    {
      "src": "api/config/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb" },
      "vercel-build": "pip install -r api/requirements.txt && python api/manage.py collectstatic --noinput && python api/manage.py migrate && cd frontend && npm install && npm run build"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/api/staticfiles/(.*)",
      "dest": "/api/staticfiles/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/dist/index.html"
    }
  ]
}
