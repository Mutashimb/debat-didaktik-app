{
  "version": 2,
  
   "buildCommand": "pip install -r api/requirements.txt && cd frontend && npm run build",
  "builds": [
    {
      "src": "api/config/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb" }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/api/staticfiles/(.*)",
      "dest": "/api/staticfiles/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/dist/index.html"
    }
  ]
}
